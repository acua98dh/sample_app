<% provide(:title, 'Contacts') %>
<h1>Contacts</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@contact) do |f| %>

            <div class="form-group">
              <%= f.label :name, class: "col-form-label" %>
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
        
            <div class="form-group">
              <%= f.label :email, class: "col-form-label" %>
              <%= f.text_field :email, autofocus: true, class: "form-control" %>
            </div>
        
            <div class="form-group">
              <%= f.label :content, class: "col-form-label" %>
              <%= f.text_area :content, autocomplete: true, class: "form-control" %>
            </div>
            
            <%= f.submit "Send form", class: "btn btn-large btn-primary" %>
            
        <% end %>    
    </div>
</div>

