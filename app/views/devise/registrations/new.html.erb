<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">

        <%= render 'shared/error_messages', object: f.object %>

        <div class="form-group">
          <%= f.label :name, class: "col-form-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "col-form-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-form-label" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3 offset-lg-3">
        <div class="actions">
          <%= f.submit "Create my account", class: "btn btn-lg btn-primary" %>
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
<% end %>

